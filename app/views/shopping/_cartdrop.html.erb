<% if @list.length == 0 %>
	<p>No orders</p>
<% else %>
	<ul>
		<% @list.each do |l| %>
			<li>
				<p><%= l.item.name %></p>
				<p><%= l.item.unit %></p>
				<p><%= number_field_tag("quantity", l.quantity) %></p>
				<p><%= l.item.selling_price %></p>
				<p><%= link_to("Delete", {:action => "delete_relation", :id => l.id}, {:remote => true, :id => "delete_relation"}) %></p>
			</li>
		<% end %>
	</ul>
<% end %>