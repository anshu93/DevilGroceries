	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
	<meta name="viewport" content="width=device-width, initial-scale=1.0"
	<link href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="checkout/css/default.css" />
	<link rel="stylesheet" type="text/css" href="checkout/css/component.css" />
	<script src="checkout/js/modernizr.custom.js"></script>
	<script src="checkout/js/nlform.js"></script>
</head>
<body>

<header class="clearfix">
	<img class="logo" src = "../logo.png"></img>
		<nav>
			<a href="../welcome/home" class="">Home</a>
			<a href="../welcome/about" class="">About</a>
			<a href="../welcome/contact" class="">Contact</a>
			<a href="../welcome/faqs" class="">FAQs</a>
		</nav>
</header>

<div class="help-text">
<h1> CHECKOUT </h1>
Your order total is <%= number_to_currency(@total_price, :precision => 2) %>. Fill out the form below and press the "buy" button to place your order.
</div>
<%= form_for @order, :url => {:controller => "buy", :action => "purchased"}, :html => {:method => 'post', :id => "nl-form", :class => "nl-form"} do |f|%>
	<%= f.hidden_field :order_id, :value => @order.id %>
	My name is &nbsp
	<%= f.text_field :user_id, {:placeholder => "Enter name"} %>
	and I would like my order delivered to 
	<%= f.select :campus, options_for_select([["East", "East"], ["West", "West"], ["Central", "Central"]]) %>
	 campus 
	<%= f.select :building, options_for_select([["EAST", "EAST:"], ["Aycock", "Aycock"], ["Belltower","Belltower"]]) %>
	dorm <br /> &nbsp and room and house 
	<%= f.text_field :room, {:placeholder => "number", "data-subline" => "eg. 230GG", } %>
	. In case I am not present during delivery I can be called at  
	<%= f.text_field :phone, {:placeholder => "Phone number (optional)"} %>
	and I would like an order confirmation emailed to
	<%= f.text_field :email, {:placeholder => "email (optional)"} %>
	<br />
	<div class = "nl-submit-wrap">
	<%= button_tag "Purchase", {:class => "nl-submit"} %>
	</div>
	<div class="nl-overlay"></div>
<% end %>
<script>
	var nlform = new NLForm( document.getElementById( 'nl-form' ) );
</script>
</body>