	<script src="checkout/js/nlform.js"></script>
</head>
<body>

<div class="container">
<header class="clearfix">
			<h1><a href="<%= root_path %>" class=""><img class="logo" src = "../logo.png"></img></a></h1>
			<h1><img class="motto" src = "../motto.png"></img></h1>
			<nav>
				<a href="/" class="">Home</a>
				<a href="../welcome/about" class="">About</a>
				<a href="../welcome/contact" class="">Contact</a>
				<a href="../welcome/faqs" class="">FAQs</a>
			</nav>
		</header>
</div>

<div class="help-text">
<h1> CHECKOUT </h1>
Your order total is <%= number_to_currency(@total_price + 3.99, :precision => 2) %> <br> Fill out the form below and press "continue."
</div>
<%= form_for @order, :url => {:controller => "buy", :action => "continue"}, :html => {:method => 'post', :id => "nl-form", :class => "nl-form"} do |f|%>
	<%= f.hidden_field :order_id, :value => @order.id %>
	I would like my order delivered to 
	<%= select_tag(:campus, options_for_select([["East", "East"],["West", "West"], ["Central", "Central"]]), :selected => "East") %> campus.
	<br />
	<div class = "nl-submit-wrap">
	<%= button_tag "Continue", {:class => "nl-submit"} %>
	</div>
	<div class="nl-overlay"></div>
<% end %>
<script>
	var nlform = new NLForm( document.getElementById( 'nl-form' ) );
</script>
</body>